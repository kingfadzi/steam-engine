connection "bitbucket" {
  plugin = "bitbucket"

  # Bitbucket Cloud authentication
  # Set via BITBUCKET_USERNAME and BITBUCKET_PASSWORD environment variables
  # or uncomment below
  # username = "your-username"
  # password = "your-app-password"

  # Bitbucket base URL (for self-hosted Bitbucket Server)
  # Default is https://api.bitbucket.org/2.0
  # base_url = "https://bitbucket.example.com/rest/api/1.0"
}
